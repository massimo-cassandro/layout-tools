  "repository": {
    "type": "git",
    "url": "git+https://github.com/massimo-cassandro/layout-tools.git#master"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "front-end-development",
    "foundation",
    "images",
    "bootstrap",
    "tools"
  ],
  "author": "Massimo Cassandro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/massimo-cassandro/layout-tools/issues"
  },
  "homepage": "https://github.com/massimo-cassandro/layout-tools#readme",
  "files": [
    "dist/*.{css,js,map}",
    "js/*.js",
    "scss/*.scss"
  ],
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.0",
    "eslint": "^7.30.0",
    "rollup": "^2.52.8",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.35.1",
    "stylelint": "^16.2.1",
    "stylelint-config-twbs-bootstrap": "^14.0.0"
